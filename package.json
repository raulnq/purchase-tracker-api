{
  "name": "node-hono-api",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "cross-env NODE_ENV=development node dist/index.js",
    "test": "cross-env NODE_ENV=test glob -c \"tsx --test\" \"./tests/**/*.test.ts\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:format": "npm run lint:fix && npm run format",
    "prepare": "husky",
    "commit": "commit",
    "docker:up": "docker-compose up database -d",
    "docker:down": "docker-compose down database",
    "docker:stop": "docker-compose stop database",
    "generate": "build && drizzle-kit generate"
  },
  "dependencies": {
    "@hono/mcp": "^0.1.5",
    "@hono/node-server": "^1.19.5",
    "@hono/zod-validator": "^0.7.4",
    "@modelcontextprotocol/sdk": "^1.21.0",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.7.1",
    "hono": "^4.10.3",
    "http-problem-details": "^0.1.7",
    "pg": "^8.16.3",
    "uuid": "^13.0.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/prompt-cli": "^20.1.0",
    "@eslint/js": "^9.38.0",
    "@faker-js/faker": "^10.1.0",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^11.0.0",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-drizzle": "^0.2.3",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.46.2"
  }
}
